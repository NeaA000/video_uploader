# .env.example - Railway 배포용 환경변수 예시

# Railway 포트 (자동 설정됨)
PORT=8080

# Flask 설정
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# Wasabi S3 설정 (필수)
WASABI_ACCESS_KEY=your-wasabi-access-key
WASABI_SECRET_KEY=your-wasabi-secret-key
WASABI_BUCKET_NAME=your-bucket-name
WASABI_REGION=us-east-1
WASABI_CDN_URL=https://your-cdn-url.com

# Firebase 설정 (필수)
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com

# Google Translate API (선택사항)
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# 앱 기본 URL
APP_BASE_URL=https://your-railway-app.railway.app/watch/

# Railway 환경 표시
RAILWAY_ENVIRONMENT=true